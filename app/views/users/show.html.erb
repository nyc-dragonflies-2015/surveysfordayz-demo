<div class="container">
  <h2>Hello user at <%= @user.email %>!</h2>

  <%= button_to 'Logout', logout_path, method: :delete %>
  <%= button_to 'Create a Survey', new_survey_path, method: :get %>

  <h3>Survey Results:</h3>
  <% @user.surveys.each do |survey| %>
    <%= link_to "#{survey.title}", results_path(survey.id) %><br />
  <% end %>

  <h3>Take a Survey:</h3>
  <% Survey.all.each do |survey| %>
    <%= link_to "#{survey.title}", take_path(survey.id) %><br />
  <% end %>
</div>
